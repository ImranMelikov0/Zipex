<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/debt_aznbutton"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/debthistory_azn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/primary"
                android:text="AZN"
                android:layout_marginBottom="-4dp"
                android:layout_marginTop="-4dp"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/debthistory_trybutton"
            android:background="@drawable/shape_items_linearlayout"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/debt_history_try"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="TRY"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginTop="-2dp"
                android:textColor="@color/primary"
                app:cornerRadius="5dp" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_items"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout1"
        android:orientation="horizontal">
        <TextView
            android:padding="5dp"
            android:background="@drawable/table_row_left"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tarix"
            android:textAlignment="center"/>


        <TextView
            android:padding="5dp"
            android:background="@drawable/table_row"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Məbləğ"
            android:textAlignment="center"/>

        <TextView
            android:padding="5dp"
            android:background="@drawable/table_row_right"
            android:layout_weight="1.2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ətraflı"
            android:textSize="16dp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_items"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:layout_below="@id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout2">
        <TextView
            android:id="@+id/debthistory_history"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022.05.24 12.02.24"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/table_row_bottom_left"
            android:padding="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/debthistory_price"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Məbləğ"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/table_row"
            android:padding="5dp"
            android:textAlignment="center"/>



        <ImageView
            android:id="@+id/debthistory_view"
            android:background="@drawable/table_row_bottom_right"
            android:layout_weight="1.2"
            android:padding="2.5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_remove_red_eye_24"
            />
    </LinearLayout>
</RelativeLayout>
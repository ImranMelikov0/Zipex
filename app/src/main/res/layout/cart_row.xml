<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/shape_items"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/cart_idtitle"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:textAlignment="textStart"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/primary"
            android:text="Testtesttest"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/shape_items"
        android:backgroundTint="@color/openblue"
        >

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#A3A3A3"
                android:layout_marginBottom="0dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/cart_quantity"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Say:1"
                    android:textSize="16dp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/cart_color"
                    android:textColor="@color/primary"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="8dp"
                    android:textSize="16dp"
                    android:text="Reng:a"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/cart_price"
                    android:layout_weight="1"
                    android:textColor="@color/primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Qiymet:150.00"/>
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/cart_size"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Olcu:a"
                    android:textSize="16dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/primary"
                    android:textAlignment="textEnd"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/cart_history"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tarix:2020-02-02"
                    android:textColor="@color/primary"/>
                <TextView
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/cart_comment"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/primary"
                    android:text="Qeyd:"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/cart_payment"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Ödəniş:Odenilmeyib "/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/SigortaText"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sığortalanmayıb"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="#FA0303"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary"
                    android:text="Sığortala"
                    android:id="@+id/cart_sigorta"
                    app:cornerRadius="5dp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#A3A3A3"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:id="@+id/cart_update"
           android:src="@drawable/baseline_design_services_24"/>
        <ImageView
            android:id="@+id/cart_link"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_link"/>
        <ImageView
           android:id="@+id/cart_view"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_remove_red_eye_24"/>

        <ImageView
            android:id="@+id/cart_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_delete_24" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/cart_balance_pay"
            android:background="@drawable/shape_items_linearlayout"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Balansla Ödəniş"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginTop="-2dp"
                android:textColor="@color/primary"
                app:cornerRadius="5dp" />
        </LinearLayout>

     <LinearLayout
         android:id="@+id/cart_online_pay"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="8dp"
         android:background="@drawable/shape_items_linearlayout"
         android:layout_weight="1">
         <Button
             android:layout_marginLeft="2dp"
             android:layout_marginTop="-2dp"
             android:layout_marginRight="2dp"
             android:layout_marginBottom="-2dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:backgroundTint="@color/white"
             android:text="Onlayn Ödəniş"
             android:textColor="@color/primary"
             app:cornerRadius="5dp" />

     </LinearLayout>



    </LinearLayout>
</LinearLayout>
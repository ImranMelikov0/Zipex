<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="30dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
           android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.4"
            android:layout_gravity="bottom"
            android:src="@drawable/zipex_img"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ZIP"
            android:layout_marginTop="15dp"
            android:textColor="#E66501"
            android:layout_weight="1.69"
            android:textStyle="bold"
            android:textSize="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="express"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="#172DA5"
            android:textSize="30dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A3A3A3"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="Sifariş balansı : 0.0 TRY"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textview2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servis balansı : 0.0 AZN"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/textview3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="27dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD balansı : 0.0 USD"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#A3A3A3"
        android:layout_marginTop="8dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_weight="1"
        android:background="@drawable/shape_table_row_balance_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout2">
        <TextView
            android:id="@+id/balance_item_history"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022.05.24 16:23:06"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="@drawable/table_row_bottom_left"
            android:paddingTop="25.333333333dp"
            android:paddingBottom="14.285dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"/>

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:id="@+id/balance_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Məbləğ"
            android:background="@drawable/table_row"
            android:paddingBottom="30dp"
            android:paddingTop="25.34dp"
            android:textAlignment="center"/>

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/balance_item_balance"
            android:layout_weight="1"
            android:paddingBottom="30dp"
            android:paddingTop="25.34dp"
            android:background="@drawable/table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balans"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/balance_item_view"
            android:background="@drawable/table_row_bottom_right"
            android:layout_weight="1"
          android:padding="25.4dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_remove_red_eye_24"
            />
    </LinearLayout>
</LinearLayout>
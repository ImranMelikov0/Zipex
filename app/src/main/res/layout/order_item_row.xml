<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/shape_items"
        android:backgroundTint="@color/openblue"
        >
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/id_title"
                android:layout_weight="1"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="@color/primary"
                android:text="Testtesttest"/>
            <ImageView
                android:id="@+id/order_item_image"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_image_24"/>
            <ImageView
                android:id="@+id/order_item_linkDetails"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_link"/>
            <ImageView
                android:id="@+id/order_item_timeHistory"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_access_time_24"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#A3A3A3"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_category"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategoriya:Test"
                    android:textSize="16dp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:id="@+id/order_item_history"
                    android:textColor="@color/primary"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="8dp"
                    android:textSize="16dp"
                    android:text="Tarix:2023-12-14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_price"
                    android:layout_weight="1"
                    android:textColor="@color/primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Qiymet:150.00"/>
                <TextView
                    android:id="@+id/order_item_catdirilma"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catdirilma:0.99"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/primary"
                    android:textAlignment="textEnd"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_marketname"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:text="Magaza Adi:Magaza"
                    android:textColor="@color/primary"/>
                <TextView
                    android:id="@+id/order_item_weight"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/primary"
                    android:text="Ceki:0.09"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_marketcode"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Magaza Kodu"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_catdirilmaofis"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catdirilma Ofisi:"
                    android:textColor="@color/primary"/>
                <ImageView
                    android:id="@+id/image_pen"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_create_24"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sığortalanmayıb"
                    android:textSize="18dp"
                    android:id="@+id/sigorta"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FA0303"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary"
                    android:text="Sığortala"
                    android:id="@+id/cart_sigorta"
                    app:cornerRadius="5dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
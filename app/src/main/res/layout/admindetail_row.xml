<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/order_sifaris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/primary"
                android:text="Sifariş edilib"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/order_anbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/primary"
                android:text="Xarici Anbardadır"
                app:cornerRadius="5dp" />
            <Button
                android:id="@+id/order_smartbeyangozleyir"
                android:text="SMART-a bəyan gözləyir"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                app:cornerRadius="5dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/order_smartbeyanedilib"
                android:text="SMART-a bəyan edilib"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                app:cornerRadius="5dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/order_yol"
                android:text="Yola düşüb"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                app:cornerRadius="5dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/order_gomruk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/primary"
                android:text="Gömrük yoxlaması"
                app:cornerRadius="5dp" />
            <Button
                android:id="@+id/order_cesidleme"
                android:text="Çeşidləmə"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                app:cornerRadius="5dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/order_catib"
                android:text="Çatıb"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                app:cornerRadius="5dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/order_tehvil"
                android:text="Təhvil verilib"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                app:cornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/linear2"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/shape_items"
        android:backgroundTint="@color/openblue"
        >
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/id_title"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/primary"
                android:text="Testtesttest"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#A3A3A3"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_category"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategoriya:Test"
                    android:textSize="16dp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:id="@+id/order_item_history"
                    android:textColor="@color/primary"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="8dp"
                    android:textSize="16dp"
                    android:text="Tarix:2023-12-14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_price"
                    android:layout_weight="1"
                    android:textColor="@color/primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Qiymet:150.00"/>
                <TextView
                    android:id="@+id/order_item_catdirilma"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catdirilma:0.99"
                    android:textSize="16dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/primary"
                    android:textAlignment="textEnd"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_marketname"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Magaza Adi:Magaza"
                    android:textColor="@color/primary"/>
                <TextView
                    android:id="@+id/order_item_weight"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/primary"
                    android:text="Ceki:0.09"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_marketcode"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="Magaza Kodu"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/order_item_catdirilmaofis"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catdirilma Ofisi:"
                    android:textColor="@color/primary"/>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Təsdiqlə"
            android:textColor="@color/primary"
            app:cornerRadius="5dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_items"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/cart_idtitle"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/primary"
                android:text="Testtesttest"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/shape_items"
            android:backgroundTint="@color/openblue"
            >

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#A3A3A3"
                    android:layout_marginBottom="0dp"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/cart_quantity"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Say:1"
                        android:textSize="16dp"
                        android:textColor="@color/primary"/>
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/cart_color"
                        android:textColor="@color/primary"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="8dp"
                        android:textSize="16dp"
                        android:text="Reng:a"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/cart_price"
                        android:layout_weight="1"
                        android:textColor="@color/primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Qiymet:150.00"/>
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/cart_size"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Olcu:a"
                        android:textSize="16dp"
                        android:layout_marginRight="8dp"
                        android:textColor="@color/primary"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/cart_history"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tarix:2020-02-02"
                        android:textColor="@color/primary"/>
                    <TextView
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:id="@+id/cart_comment"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/primary"
                        android:text="Qeyd:"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#A3A3A3"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mağaza adı"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/magazaname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_items_white"
                        android:padding="10dp"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mağaza kodu"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/magazacode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_items_white"
                        android:padding="10dp"
                        android:inputType="number"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Çəki"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/ceki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_items_white"
                        android:padding="10dp"
                        android:inputType="number"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Çatdırılma"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/catdirilma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_items_white"
                        android:padding="10dp"
                        android:inputType="number"
                        android:singleLine="true" />
                </LinearLayout>
                <Button
                    android:id="@+id/button"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Təsdiqlə"
                    android:textColor="@color/primary"
                    app:cornerRadius="5dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
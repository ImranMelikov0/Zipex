<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/debt_azn_button"
            android:layout_margin="8dp"
            android:background="@drawable/shape_items_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/debt_azn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/primary"
                android:text="AZN"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginTop="-2dp"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/debt_try_button"
            android:background="@drawable/shape_items_linearlayout"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/debt_try"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="TRY"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginTop="-2dp"
                android:textColor="@color/primary"
                app:cornerRadius="5dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/debthistory_usdbutton"
            android:background="@drawable/shape_items_linearlayout"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/debt_history_usd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="USD"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="-2dp"
                android:layout_marginTop="-2dp"
                android:textColor="@color/primary"
                app:cornerRadius="5dp" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearbutton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linear">
        <TextView
            android:id="@+id/debt_debtazn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borcunuz: 0.00 AZN"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/debt_payall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.97"
            android:text="Hamısını ödə"
            android:layout_marginTop="-2.5dp"
            android:textColor="@color/white"
            app:cornerRadius="5dp"
            android:enabled="false"
            android:backgroundTint="@color/colorbuttonprimary"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/debt_lineartable"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_below="@id/linearbutton"
        android:background="@drawable/shape_table_row_balance"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout1"

            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:background="@drawable/table_row_left"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tarix"
                android:textAlignment="center"/>


            <TextView
                android:padding="5dp"
                android:background="@drawable/table_row"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Məbləğ"
                android:textAlignment="center"/>
            <TextView
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/table_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ödə"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"/>
            <TextView
                android:padding="5dp"
                android:background="@drawable/table_row_right"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ətraflı"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/debt_lineartable"
        android:layout_weight="1"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table_row_balance_bottom"
        android:orientation="horizontal"
        android:id="@+id/linearlayout2">
        <TextView
            android:id="@+id/debt_history"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022.05.24"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/table_row_bottom_left"
            android:padding="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/debt_price"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Məbləğ"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/table_row"
            android:padding="5dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/debt_pay"
            android:layout_weight="1"
            android:padding="2.5dp"
            android:background="@drawable/table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_payment_24"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/debt_view"
            android:background="@drawable/table_row_bottom_right"
            android:layout_weight="1"
            android:padding="2.5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_remove_red_eye_24"
            />
    </LinearLayout>
</RelativeLayout>
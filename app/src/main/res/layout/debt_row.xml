<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table_row_balance_bottom"
        android:orientation="horizontal"
        android:id="@+id/linearlayout2">
        <TextView
            android:id="@+id/debt_history"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2022.05.24"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/table_row_bottom_left"
            android:padding="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/debt_price"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Məbləğ"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/table_row"
            android:padding="5dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/debt_pay"
            android:layout_weight="1"
            android:padding="2.5dp"
            android:background="@drawable/table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_payment_24"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/debt_view"
            android:background="@drawable/table_row_bottom_right"
            android:layout_weight="1"
            android:padding="2.5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_remove_red_eye_24"
            />
    </LinearLayout>
</RelativeLayout>